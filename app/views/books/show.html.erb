<%= render '/header'%>
<div class='body'>
    <div class='container'>
        <p id="notice">
            <%=  notice %>
        </p>
        <div class='row'>
            <%= render '/left' ,user: @book.user, book: @book%>
            <div class='col-xs-9'>
                <h2>Book detail</h2>
                <table class='table'>
                    <tr>
                        <% if @book.user.profile_image_id.nil? %>
                        <td>
                            <%= link_to user_path(@book.user) do %>
                            <%= image_tag "noimage_person_c.png", :size => "30x30"%>
                            <br>
                            <%= @book.user.name %>
                            <% end %>
                        </td>
                        <% else %>
                        <td>
                            <%= link_to user_path(@book.user) do %>
                            <%= attachment_image_tag @book.user, :profile_image, :size => '30x30'%>
                            <br>
                            <%= @book.user.name %>
                            <% end %>
                        </td>
                        <% end %>
                        <td>
                            <%= link_to @book.title, book_path(@book) %>
                        </td>
                        <td>
                            <%= @book.body %>
                        </td>
                        <% if @book.user_id.to_i == current_user.id %>
                        <td>
                            <%= link_to "Edit", edit_book_path(@book.id) ,class:"btn-sm btn-success"%>
                        </td>
                        <td>
                            <%= link_to "Destroy",  "/books/#{@book.id}" ,method: :delete, "data-confirm" => "本当に削除しますか？",class:"btn-sm btn-danger"%>
                        </td>
                        <% end %>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
<footer>
    <div class='container'>
        <div class='row'>
            <div class='col-xs-3 col-xs-offset-9'>
                <p>CopyRight Infratop.inc</p>
            </div>
        </div>
    </div>
</footer>