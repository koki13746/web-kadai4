<%= render '/header'%>
<p id="notice">
    <%=  notice %>
</p>
<div class='body'>
    <div class='container'>
        <p id="notice"></p>
        <div class='row'>
            <%= render '/left_current' , book: @book %>
            <div class='col-xs-9'>
                <h2>Books</h2>
                <table class='table table-hover table-inverse'>
                    <thead>
                        <tr>
                            <th></th>
                            <th>Title</th>
                            <th>Opinion</th>
                            <th colspan="3"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @books.each do |book| %>
                        <tr>
                            <% if book.user.profile_image_id.nil? %>
                            <td>
                                <%= link_to user_path(book.user) do %>
                                <%= image_tag "noimage_person_c.png" ,:size => '30x30'%>
                                <% end %>
                            </td>
                            <% else %>
                            <td>
                                <%= link_to user_path(book.user) do %>
                                <%= attachment_image_tag book.user , :profile_image, :size => '30x30' %>
                                <% end %>
                            </td>
                            <% end %>
                            <td>
                                <%= link_to book.title, book_path(book.id) %>
                            </td>
                            <td>
                                <%= book.body %>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<footer>
    <div class='container'>
        <div class='row'>
            <div class='col-xs-3 col-xs-offset-9'>
                <p>CopyRight Infratop.inc</p>
            </div>
        </div>
    </div>
</footer>